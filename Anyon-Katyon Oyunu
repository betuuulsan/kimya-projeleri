        "# Game\n",
        "\n",
        "# import library\n",
        "import random\n",
        "\n",
        "# 20 Katyon, 17 Anyon\n",
        "\n",
        "katyon = {\"lityum\": \"Li+\", \"sodyum\": \"Na+\", \"potasyum\": \"K+\", \"berilyum\": \"Be^+2\", \"magnezyum\": \"Mg^+2\", 'kalsiyum': 'Ca^+2', 'gümüş': 'Ag+', 'çinko': 'Zn^+2', 'alüminyum': 'Al^+4', 'amonyum': 'Nh4+', 'demir(II)': 'Fe^+2', 'demir(III)': 'Fe^+3', 'cıva(I)': 'Hg+', 'cıva(II)': 'Hg^+2', 'kalay(II)': 'Sn^+2', 'Kalay(IV)': 'Sn^+4', 'Kurşun(II)': 'Pb+', 'Kurşun(IV)': 'Pb^+4', 'Bakır(I)': 'Cu+', 'Bakır(II)': 'Cu^+2'}\n",
        "anyon = {\"hidrür\": \"H-\", \"florür\": \"F-\", \"klorür\": \"Cl-\", \"bromür\": \"Br-\", \"iyodür\": \"I-\", \"oksit\": \"O^-2\", \"sülfür\": \"S^-2\", \"nitrür\": \"N^-3\", \"fosfür\": \"p^-3\", \"karbür\": \"C^-4\", \"hidroksit\": \"OH-\", \"nitrat\": \"NO-\", \"siyanür\": \"CN-\", \"asetat\": \"CH3COO-\", \"Karbonat\": \"CO3^-2\", \"sülfat\": \"SO4^-2\", \"Fosfat\": \"PO4^-2\" }\n",
        "\n",
        "list_k = list(katyon) # katyon == katyon.keys()\n",
        "list_k_v = list(katyon.values())\n",
        "list_a = list(anyon)\n",
        "list_a_v = list(anyon.values())\n",
        "while True:\n",
        "  can = 5\n",
        "  grade = 0\n",
        "  i = 1\n",
        "\n",
        "  game = int(input(\"Hangi oyunu oynamak istersin? \\nAnyon-Katyon Doğrulama oyunu için 1\\nEşleştirme oyunu için 2\\n\"))\n",
        "\n",
        "  while True:  # sonsuz döngü, infinite loop\n",
        "    print(f\"Puan: {grade} ------ Can: {can}\\n\")\n",
        "\n",
        "    if can == 0 or grade == 100:  # Oyuna devam ya da çok kontrolü\n",
        "      break\n",
        "\n",
        "    which_list = random.randint(0, 1) # Katyon ve Anyon array rastgele seçimi\n",
        "\n",
        "    question = \"\"\n",
        "\n",
        "    if game == 1:\n",
        "      which_part = random.randint(0, 1) # Key - Value seçimi\n",
        "\n",
        "      # Katyon listesi : which_list = 0\n",
        "      if which_list == 0:\n",
        "        which_item = random.randint(0, 19) # Array elemanı rastgele seçimi\n",
        "        if which_part == 0:\n",
        "\n",
        "          question = list_k[which_item]\n",
        "        else:\n",
        "          question = list_k_v[which_item]\n",
        "\n",
        "      # Anyon listesi : : which_list = 1\n",
        "      elif which_list == 1:\n",
        "        which_item = random.randint(0, 16) # Array elemanı rastgele seçimi\n",
        "        if which_part == 0:\n",
        "          question = list_a[which_item]\n",
        "        else:\n",
        "          question = list_a_v[which_item]\n",
        "\n",
        "      print(f\"{i}. soru\\n{question}\")\n",
        "\n",
        "\n",
        "      option = int(input(\"Hangisi olduğunu seç: Anyon(1) / Katyon(2) :\"))\n",
        "      if option == 1 or option == 2:\n",
        "\n",
        "        if option == 1 and which_list == 0:\n",
        "          print(f\"Yanlış! Doğru cevap ----> {question}: Katyon\")\n",
        "          can -= 1\n",
        "\n",
        "        elif option == 1 and which_list == 1:\n",
        "          print(\"Doğru\")\n",
        "          grade += 20\n",
        "\n",
        "        elif option == 2 and which_list == 1:\n",
        "          print(f\"Yanlış! Doğru cevap ----> {question}: Anyon\")\n",
        "          can -= 1\n",
        "\n",
        "        elif option == 2 and which_list == 0:\n",
        "          print(\"Doğru\")\n",
        "          grade += 20\n",
        "\n",
        "      else:\n",
        "        print(\"Böyle bir seçenek yok!\")\n",
        "\n",
        "      print(\"\")\n",
        "      i += 1\n",
        "    elif game == 2:\n",
        "      if which_list == 0:\n",
        "        which_item = random.randint(0, 19) # Array elemanı rastgele seçimi\n",
        "        question = list_k_v[which_item]\n",
        "\n",
        "      elif which_list == 1:\n",
        "        which_item = random.randint(0, 16) # Array elemanı rastgele seçimi\n",
        "        question = list_a_v[which_item]\n",
        "\n",
        "      print(f\"{i}. soru\\n{question}\")\n",
        "      answer = input(\"Formülü verilen bileşiğin adını yazınız: \")\n",
        "      answer = answer.lower()\n",
        "      if which_list == 0:\n",
        "        if answer == list_k[which_item]:\n",
        "          print(\"Doğru\")\n",
        "          grade += 20\n",
        "        else:\n",
        "          print(f\"Yanlış! Doğru cevap ----> {question}: {list_k[which_item]}\")\n",
        "          can -= 1\n",
        "      elif which_list == 1:\n",
        "        if answer == list_a[which_item]:\n",
        "          print(\"Doğru\")\n",
        "          grade += 20\n",
        "        else:\n",
        "          print(f\"Yanlış! Doğru cevap ----> {question}: {list_a[which_item]}\")\n",
        "          can -= 1\n",
        "\n",
        "      print(\"\")\n",
        "      i += 1\n",
        "\n",
        "  print(f\"Puanınız: {grade}\")\n",
        " # input(\"Çıkmak için herhangi bir tuşa basınız.\")\n",
        "  # baş harfin kontrolünü yap\n",
        "  print(\"Program bitti. Başa dönmek için herhangi bir tuşa, çıkmak için 'q' tuşuna basın.\")\n",
        "  choice = input().lower()\n",
        "  if choice == \"q\":\n",
        "        break"
